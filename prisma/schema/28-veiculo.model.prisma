model Veiculo {
  id             String   @id @default(uuid())
  placaVeiculo   String   @unique
  placaCarreta   String?
  tipoVeiculo    String
  marcaVeiculo   String?
  modeloVeiculo  String?
  cliente        String?
  ativo          Boolean @default(true)
  status         String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  entradas  Entrada[]
  chamadas  Chamadas[]

  @@map("Veiculo")
}
