model Cliente {
    id          String      @id @default(uuid())
    nome        String?
    cnpj        String?
    ativo       Boolean @default(true)
    status      String?
  
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Relacionamentos
    motorista     Motorista[]
    veiculo       Veiculo[]
    entradas      Entrada[]
}