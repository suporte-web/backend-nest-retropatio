model Motorista {
  id                String  @id @default(uuid()) @map("id")
  nome              String
  cpf               String  @unique
  status            Boolean @default(true)
  dataNascimento    String?
  categoriaCarteira String?
  tipo              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  entradas Entrada[]

  @@map("Motorista")
}